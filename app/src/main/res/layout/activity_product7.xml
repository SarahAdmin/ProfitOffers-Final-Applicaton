<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE2ED"
    tools:context=".Product7">

    <TextView
        android:id="@+id/pro7_heading2"
        android:layout_width="373dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/alata"
        android:text="Fairy Original Washing Up Liquid"
        android:textColor="#000000"
        android:textSize="95px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pro7_image2"
        android:layout_width="192dp"
        android:layout_height="191dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toStartOf="@+id/pro7_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro7_heading2"
        app:srcCompat="@drawable/fairy_liquid" />

    <TextView
        android:id="@+id/pro7_description"
        android:layout_width="259dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="136dp"
        android:text="6x Washing up liquid bottles in one box."
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro7_image2" />

    <Spinner
        android:id="@+id/pro7_spinner"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/pro7_image2"
        app:layout_constraintTop_toBottomOf="@+id/pro7_quantity_heading" />

    <TextView
        android:id="@+id/pro7_quantity_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="105dp"
        android:text="Quantity"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pro7_image2"
        app:layout_constraintTop_toBottomOf="@+id/pro7_heading2" />

    <ImageView
        android:id="@+id/addtoTrolley7"
        android:layout_width="123dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro7_description"
        app:srcCompat="@drawable/add_trolley_icon_1" />

    <TextView
        android:id="@+id/pro7_addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="174dp"
        android:text="Insert item to your shopping basket"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtoTrolley7" />

    <Button
        android:id="@+id/goBack7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="301dp"
        android:backgroundTint="#ff0000"
        android:onClick="GoBackPromotions"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro7_addItem" />

    <TextView
        android:id="@+id/pro_price_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="282dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="70dp"
        android:text="Â£14.00"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro7_spinner" />

    <TextView
        android:id="@+id/vat7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="54dp"
        android:text="20% VAT"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addtoTrolley7"
        app:layout_constraintTop_toBottomOf="@+id/pro_price_7" />
</androidx.constraintlayout.widget.ConstraintLayout>