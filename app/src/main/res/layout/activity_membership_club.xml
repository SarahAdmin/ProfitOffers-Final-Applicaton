<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembershipClub">

    <TextView
        android:id="@+id/membership_club_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/alata"
        android:text="Membership Club"
        android:textColor="#000000"
        android:textSize="96px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="173dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/membership_club_heading"
        app:srcCompat="@drawable/user_icon_1" />

    <TextView
        android:id="@+id/users_name"
        android:layout_width="153dp"
        android:layout_height="42dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="144dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/membership_no_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="14dp"
        android:text="Membership No."
        android:textColor="#000000"
        android:textSize="75px"
        app:layout_constraintBottom_toTopOf="@+id/users_membership_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_name" />

    <TextView
        android:id="@+id/users_membership_no"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="127dp"
        android:text="1242 9946 4869"
        android:textColor="#000000"
        android:textSize="70px"
        app:layout_constraintBottom_toTopOf="@+id/back_arrow_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/membership_no_heading" />

    <ImageView
        android:id="@+id/back_arrow_2"
        android:layout_width="100dp"
        android:layout_height="109dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="308dp"
        android:onClick="BacktoHomePage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users_membership_no"
        app:srcCompat="@drawable/left_arrow__1" />
</androidx.constraintlayout.widget.ConstraintLayout>