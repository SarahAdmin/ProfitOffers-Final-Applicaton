<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE2ED"
    tools:context=".Product2">

    <TextView
        android:id="@+id/pro2_heading"
        android:layout_width="373dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/alata"
        android:text="Cello C4020G 40” Smart Android TV"
        android:textColor="#000000"
        android:textSize="95px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pro2_image"
        android:layout_width="192dp"
        android:layout_height="191dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toStartOf="@+id/pro2_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro2_heading"
        app:srcCompat="@drawable/latest_television_two" />

    <TextView
        android:id="@+id/pro2_description"
        android:layout_width="292dp"
        android:layout_height="134dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="103dp"
        android:text="The smart television in Android has exciting features are Freeview Play, Google Assistant, Google Chromecast, Disney+,
        Netflix, Prime Video, Apple TV+, BBC iPlayer Full HD 1080p Made in the UK 2022 model [Energy Class F] "
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro2_image" />

    <Spinner
        android:id="@+id/pro2_spinner"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/pro2_image"
        app:layout_constraintTop_toBottomOf="@+id/pro2_quantity_heading" />

    <TextView
        android:id="@+id/pro2_quantity_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="105dp"
        android:text="Quantity"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pro2_image"
        app:layout_constraintTop_toBottomOf="@+id/pro2_heading" />

    <ImageView
        android:id="@+id/addtoTrolley2"
        android:layout_width="123dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="122dp"
        app:layout_constraintEnd_toStartOf="@+id/pro_price_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro2_description"
        app:srcCompat="@drawable/add_trolley_icon_1" />

    <TextView
        android:id="@+id/pro2_insertItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="174dp"
        android:text="Insert item to your shopping basket"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtoTrolley2" />

    <Button
        android:id="@+id/BackButton_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="301dp"
        android:backgroundTint="#ff0000"
        android:onClick="GoBack2"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro2_insertItem" />

    <TextView
        android:id="@+id/pro_price_2"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="21dp"
        android:text="£350.00"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintStart_toEndOf="@+id/addtoTrolley2"
        app:layout_constraintTop_toBottomOf="@+id/pro2_description" />

    <TextView
        android:id="@+id/vat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="123dp"
        android:text="20% VAT"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addtoTrolley2"
        app:layout_constraintTop_toBottomOf="@+id/pro_price_2" />

</androidx.constraintlayout.widget.ConstraintLayout>