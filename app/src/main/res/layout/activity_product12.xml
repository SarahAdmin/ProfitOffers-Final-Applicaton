<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE2ED"
    tools:context=".Product12">

    <TextView
        android:id="@+id/pro12_heading2"
        android:layout_width="373dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/alata"
        android:text="Nestle Kit Kat"
        android:textColor="#000000"
        android:textSize="95px"
        app:layout_constraintBottom_toTopOf="@+id/pro12_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pro12_image2"
        android:layout_width="192dp"
        android:layout_height="191dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toStartOf="@+id/pro12_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro12_heading2"
        app:srcCompat="@drawable/kit_kat_image" />

    <TextView
        android:id="@+id/pro12_description"
        android:layout_width="234dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="32dp"
        android:text="Milk Chocolate Bar covered water biscuits. 10 bars x (8x41.5 grams)."
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/pro_price_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro12_image2" />

    <Spinner
        android:id="@+id/pro12_spinner"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/pro12_image2"
        app:layout_constraintTop_toBottomOf="@+id/pro12_quantity_heading" />

    <TextView
        android:id="@+id/pro12_quantity_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="105dp"
        android:text="Quantity"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pro12_image2"
        app:layout_constraintTop_toBottomOf="@+id/pro12_heading2" />

    <ImageView
        android:id="@+id/addtoTrolley12"
        android:layout_width="123dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro12_description"
        app:srcCompat="@drawable/add_trolley_icon_1" />

    <TextView
        android:id="@+id/pro12_addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="174dp"
        android:text="Insert item to your shopping basket"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtoTrolley12" />

    <Button
        android:id="@+id/goBack12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="301dp"
        android:backgroundTint="#ff0000"
        android:onClick="GoBackProducts"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro12_addItem" />

    <TextView
        android:id="@+id/pro_price_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="153dp"
        android:text="Â£35.00"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintStart_toEndOf="@+id/pro12_description"
        app:layout_constraintTop_toBottomOf="@+id/pro12_spinner" />

    <TextView
        android:id="@+id/vat12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="58dp"
        android:text="20% VAT"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addtoTrolley12"
        app:layout_constraintTop_toBottomOf="@+id/pro_price_12" />

</androidx.constraintlayout.widget.ConstraintLayout>