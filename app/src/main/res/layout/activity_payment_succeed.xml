<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE2ED"
    tools:context=".PaymentSucceed">

    <TextView
        android:id="@+id/payment_succeed_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/alata"
        android:text="Payment Succeed"
        android:textColor="#000000"
        android:textSize="90px"
        app:layout_constraintBottom_toTopOf="@+id/payment_succeed_succed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/payment_succeed_succed"
        android:layout_width="331dp"
        android:layout_height="117dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="348dp"
        android:text="Thank you for purchase at
ProfitOffers"
        android:textColor="#000000"
        android:textSize="65px"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="156dp"
        android:layout_height="60dp"
        android:layout_marginStart="239dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="#ff0000"
        android:onClick="HomePage"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>