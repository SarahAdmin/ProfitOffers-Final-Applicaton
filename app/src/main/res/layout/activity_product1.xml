<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE2ED"
    tools:context=".Product1">

    <TextView
        android:id="@+id/pro1_heading"
        android:layout_width="373dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/alata"
        android:text="Toshiba UF3D 43 Inch Smart TV 109.2cm "
        android:textColor="#000000"
        android:textSize="95px"
        app:layout_constraintBottom_toTopOf="@+id/pro1_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pro1_image"
        android:layout_width="192dp"
        android:layout_height="191dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toStartOf="@+id/pro1_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro1_heading"
        app:srcCompat="@drawable/latest_television_one" />

    <TextView
        android:id="@+id/pro1_description"
        android:layout_width="284dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="103dp"
        android:text="The smart television with Fire TV built-in. 4K Ultra HD, HR10, Freeview Play,
Prime Video, Netflix, Disney+, Alexa voice control, HDMI 2,1, Bluetooth, Airplay [Energy Class F]"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro1_image" />

    <Spinner
        android:id="@+id/pro1_spinner"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/pro1_image"
        app:layout_constraintTop_toBottomOf="@+id/pro1_quantity_heading" />

    <TextView
        android:id="@+id/pro1_quantity_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="105dp"
        android:text="Quantity"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pro1_image"
        app:layout_constraintTop_toBottomOf="@+id/pro1_heading" />

    <ImageView
        android:id="@+id/addtoTrolley1"
        android:layout_width="123dp"
        android:layout_height="102dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_trolley_icon_1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="25dp"
        android:text="Insert item to your shopping basket"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Backbutton_6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Backbutton_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#ff0000"
        android:onClick="GoBackHome"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pro_price_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="282dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="228dp"
        android:text="Â£395.99"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro1_description" />

    <TextView
        android:id="@+id/vat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="190dp"
        android:text="20% VAT"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addtoTrolley1"
        app:layout_constraintTop_toBottomOf="@+id/pro_price_1" />
</androidx.constraintlayout.widget.ConstraintLayout>