<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAE2ED"
    tools:context=".ResetPassword">

    <TextView
        android:id="@+id/reset_password_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="@font/alata"
        android:text="Forgot Password"
        android:textColor="#000000"
        android:textSize="95px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_heading_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="274dp"
        android:text="Email Address"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_password_heading" />

    <TextView
        android:id="@+id/new_password_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="269dp"
        android:text="New Password"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_input_2" />

    <TextView
        android:id="@+id/confirm_new_password_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="194dp"
        android:text="Confirm New Password"
        android:textColor="#000000"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_input" />

    <EditText
        android:id="@+id/email_input_2"
        android:layout_width="364dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_heading_2" />

    <EditText
        android:id="@+id/new_password_input"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_heading" />

    <EditText
        android:id="@+id/confirm_new_password_input"
        android:layout_width="361dp"
        android:layout_height="47dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_new_password_heading" />

    <ImageView
        android:id="@+id/goBackArrow_2"
        android:layout_width="102dp"
        android:layout_height="92dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="138dp"
        android:onClick="GoBacktoSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_new_password_input"
        app:srcCompat="@drawable/left_arrow__1" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="37dp"
        android:backgroundTint="#ff0000"
        android:onClick="SubmitNewPassword"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goBackArrow_2"
        app:layout_constraintTop_toBottomOf="@+id/confirm_new_password_input" />
</androidx.constraintlayout.widget.ConstraintLayout>